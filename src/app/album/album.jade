.album-view(layout='column')
  md-content
      md-card.card-image.header-image
        img(src='../../assets/images/tokimonsta_halfshadows.jpg')
        .overlay
        .header-meta
          h1 Half Shadows
          a(ui-sref="nav.artist"): p By TokiMonsta
      .content-wrapper
        .social-action
          md-fab-speed-dial(md-open='false',md-direction='up', ng-class='album.selectedMode')
            md-fab-trigger
              md-button.md-fab.md-warn.action-button.social-button(aria-label='social')
                md-icon(md-svg-src='../../assets/icons/social.svg')
            md-fab-actions.social-options
              md-button.md-fab.md-raised.md-mini.sub-action
                md-icon(md-svg-src='../../assets/icons/twitter.svg',aria-label='twitter')
              md-button.md-fab.md-raised.md-mini.sub-action
                md-icon(md-svg-src='../../assets/icons/instagram.svg',aria-label='instagram')
              md-button.md-fab.md-raised.md-mini.sub-action
                md-icon(md-svg-src='../../assets/icons/snapchat.svg',aria-label='snapchat')
        .content-body
          h1 Stream
          md-list.list-body
            md-list-item.item-content(md-ink-ripple, layout="row", ng-repeat='service in album.streamingServices')
              img.md-avatar(ng-src='{{service.logo}}')
              .md-list-item-text(layout="column")
                p {{service.name}}

