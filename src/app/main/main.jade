div(layout='column')
  md-content
    md-toolbar(md-scroll-shrink=true)
      .md-toolbar-tools
        md-button(class='md-icon-button',aria-label='social' )
          md-icon( md-svg-icon='../../assets/icons/menu.svg')
        .nav-icon
    md-card.card-image.album-image
      img(src='../../assets/images/tokimonsta_halfshadows.jpg')
    md-fab-speed-dial(md-open='main.isOpen'
    ,md-direction='{{vm.selectedDirection}}', ng-class='main.selectedMode')
      md-fab-trigger
        md-button.md-fab.md-warn.action-button(aria-label='social')
          md-icon(md-svg-src='../../assets/icons/social.svg')
      md-fab-actions
        md-button.md-fab.md-raised.md-mini.sub-action
          md-icon(md-svg-src='../../assets/icons/twitter.svg',aria-label='twitter')
        md-button.md-fab.md-raised.md-mini.sub-action
          md-icon(md-svg-src='../../assets/icons/instagram.svg',aria-label='instagram')
        md-button.md-fab.md-raised.md-mini.sub-action
          md-icon(md-svg-src='../../assets/icons/snapchat.svg',aria-label='snapchat')
