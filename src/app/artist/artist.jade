.artist-view(layout='column')
  md-content
      md-card.card-image.header-image
        img(src='../../assets/images/toki.jpg')
        .overlay
        .header-meta
          h1 TokiMonsta
      .content-wrapper
        .social-action
          md-fab-speed-dial(md-open='false',md-direction='up', ng-class='artist.selectedMode')
            md-fab-trigger
              md-button.md-fab.md-warn.action-button.social-button(aria-label='social')
                md-icon(md-svg-src='../../assets/images/social.svg')
            md-fab-actions.social-options
              md-button.md-fab.md-raised.md-mini.sub-action
                md-icon(md-svg-src='../../assets/images/twitter.svg',aria-label='twitter')
              md-button.md-fab.md-raised.md-mini.sub-action
                md-icon(md-svg-src='../../assets/images/instagram.svg',aria-label='instagram')
              md-button.md-fab.md-raised.md-mini.sub-action
                md-icon(md-svg-src='../../assets/images/snapchat.svg',aria-label='snapchat')
        .content-body
          h1 Albums
          .albums(layout='row' layout-wrap)
            md-card.card-image(ng-repeat='album in artist.albums', flex='33.33', ng-click='artist.albumPage(album.title)')
                img(ng-src='{{album.cover}}')
                md-card-content
                  h2 {{album.title}}
           h1
             | Songs
           md-list.list-body
             md-list-item.item-content(md-ink-ripple, layout='row', ng-repeat='song in artist.songs')
               img.md-avatar(ng-src='{{song.cover}}')
               .md-list-item-text(layout='column')
                 p {{ song.title }}
